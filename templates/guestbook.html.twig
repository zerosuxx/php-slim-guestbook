<pre><code>{{ errors }}</code></pre>
<form method="POST" action="/guestbook/add">
    <table>
        <tr><td>Name</td><td><input type="text" name="name" value="{{ data.name }}"></td></tr>
        <tr><td>Email</td><td><input type="email" name="email" value="{{ data.email }}"></td></tr>
        <tr><td>Message</td><td><textarea name="message">{{ data.message }}</textarea></td></tr>
        <tr><td colspan="2"><input type="submit" value="Save"></td></tr>
    </table>
</form>
<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Message</th>
        <th>Created</th>
    </tr>
    </thead>
    <tbody>
    {% for msg in messages %}
        <tr>
            <td>{{ msg.name }}</td>
            <td>{{ msg.email }}</td>
            <td>{{ msg.message }}</td>
            <td>{{ msg.created_at }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>